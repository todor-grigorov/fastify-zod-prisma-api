{
  "name": "react-challenge-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal TypeScript Fastify API (classic layered: controller→service→repository) with Zod validation, Prisma (SQLite), and a tiny centralized error handler.",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "start": "node --enable-source-maps dist/server.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@prisma/client": "^5.19.0",
    "fastify": "^4.28.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "prisma": "^5.19.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.17"
  },
  "keywords": [
    "fastify",
    "typescript",
    "zod",
    "prisma",
    "sqlite",
    "crud",
    "layered",
    "api"
  ],
  "license": "MIT"
}
